doctype html
html
    head
        link(rel="stylesheet" type="text/css" href="/asset/bootstrap/bootstrap.min.css")
        
    body
        h1 book
        p Welcome to book-list
        input(type='text' name='name' placeholder="书籍名" )
        input(type='text' name='code' placeholder="书籍编号")
        div(class='heigh-20')
        button(type='button' class='btn btn-primary' id='to-add-book') 添加书籍
        p #{message}
        if result.length
        table(style='width:80%;')
            tr
                th(style='width:50px;') #
                th(style='width:100px;') 书名
                th(style='width:100px;') 编号
                th(style='width:200px;') 添加时间
            each item , index in result
                tr
                    each value ,iindex in item
                        td= value

            
    script( type="text/javascript" src="/asset/jquery/jquery-2.2.1.js")
    script( type="text/javascript" src="/asset/bootstrap/bootstrap.min.js")
    script( type="text/javascript" src="/js/book.js")